<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/enak">

        <ImageButton
            android:id="@+id/sign_out"
            android:layout_margin="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/enak"
            android:src="@mipmap/ic_logocat"
            android:layout_gravity="start"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:text="Bermain Ubur-Ubur"
            android:textColor="#ffff"
            android:drawablePadding="6dp"/>


    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="187dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/bengbeng"
                android:layout_width="114dp"
                android:layout_height="116dp"
                android:backgroundTint="@color/white"
                android:onClick="buyBengbeng"
                android:src="@mipmap/ic_bengbeng" />

            <ImageButton
                android:id="@+id/goodtime"
                android:layout_width="111dp"
                android:layout_height="116dp"
                android:onClick="buyGoodtime"
                android:backgroundTint="@color/white"
                android:src="@mipmap/ic_goodtime" />

            <ImageButton
                android:id="@+id/shorr"
                android:layout_width="119dp"
                android:layout_height="116dp"
                android:onClick="buyShorr"
                android:backgroundTint="@color/white"
                android:src="@mipmap/ic_launcher_shorr" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/nextar"
                android:layout_width="117dp"
                android:layout_height="115dp"
                android:onClick="buyNextar"
                android:backgroundTint="@color/white"
                android:src="@mipmap/ic_nextar" />

            <ImageButton
                android:id="@+id/pilus"
                android:layout_width="116dp"
                android:layout_height="115dp"
                android:onClick="buyPilus"
                android:backgroundTint="@color/white"
                android:src="@mipmap/ic_pilus" />

            <ImageButton
                android:id="@+id/richeese"
                android:layout_width="112dp"
                android:layout_height="115dp"
                android:onClick="buyRicheese"
                android:backgroundTint="@color/white"
                android:src="@mipmap/ic_richeese" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/tehpucuk"
                android:layout_width="118dp"
                android:layout_height="115dp"
                android:onClick="buyTehpucuk"
                android:backgroundTint="@color/white"
                android:src="@mipmap/ic_tehpucuk" />

            <ImageButton
                android:id="@+id/ultramilk"
                android:layout_width="111dp"
                android:layout_height="115dp"
                android:onClick="buyUltramilk"
                android:backgroundTint="@color/white"
                android:src="@mipmap/ic_ultramilk" />

            <ImageButton
                android:id="@+id/vit"
                android:layout_width="112dp"
                android:layout_height="116dp"
                android:onClick="buyVit"
                android:backgroundTint="@color/white"
                android:src="@mipmap/ic_vit" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>